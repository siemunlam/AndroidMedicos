<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners
                android:radius="@dimen/switchRadius" />
            <solid android:color="@color/colorSwitchOff" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/marginSwitch"
        android:left="@dimen/marginSwitch"
        android:right="@dimen/shadowMarginHorizontalSwitch"
        android:top="@dimen/marginSwitch">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="@dimen/switchRadius" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/marginSwitch"
        android:left="@dimen/marginSwitch"
        android:right="@dimen/marginHorizontalSwitch"
        android:top="@dimen/marginSwitch">
        <shape android:shape="rectangle">
            <corners
                android:radius="@dimen/switchRadius" />
            <solid android:color="@color/colorSwitchOffLight" />
        </shape>
    </item>
</layer-list>